# ===== SOLAR NASIH SMA - Variables d'environnement =====

# ===== API KEYS =====
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# ===== CONFIGURATION DE L'ENVIRONNEMENT =====
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ===== CONFIGURATION DU SERVEUR =====
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ===== CONFIGURATION CORS =====
CORS_ORIGINS=https://solar-nasih-frontend.vercel.app,http://localhost:3000,http://localhost:5173

# ===== CONFIGURATION DES SERVICES EXTERNES =====
REDIS_URL=redis://localhost:6379
QDRANT_URL=http://localhost:6333

# ===== CONFIGURATION DE LA BASE DE DONNÉES =====
DATABASE_URL=sqlite:///./solar_nasih_sma.db

# ===== CONFIGURATION DU CACHE =====
CACHE_TTL=3600
SESSION_SECRET=your_session_secret_here

# ===== CONFIGURATION DES FICHIERS =====
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,docx,txt,jpg,jpeg,png,mp3,wav,mp4

# ===== CONFIGURATION DE LA SÉCURITÉ =====
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ===== CONFIGURATION DES MODÈLES IA =====
DEFAULT_MODEL=gemini-pro
VISION_MODEL=gemini-pro-vision
EMBEDDING_MODEL=text-embedding-ada-002

# ===== CONFIGURATION DES LIMITES =====
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_REQUEST=4000
MAX_CONVERSATION_LENGTH=50
